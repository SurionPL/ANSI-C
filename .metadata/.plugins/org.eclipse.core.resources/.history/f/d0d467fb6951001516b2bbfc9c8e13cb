#ifndef RTC_H_
#define RTC_H_

#define DS1307_W 0xD0				//Data write
#define DS1307_R 0xD1

#define SQW_PIN  PB1
#define SQW_PORT PORTB

typedef struct
{

}RTC_TypeDef;


typedef struct
{
	uint16_t year;
	uint8_t month;
	uint8_t day;
	uint8_t hour;
	uint8_t minute;
	uint8_t second;
}RTC_DataTimeTypedef;

void RTC_SetDate(const RTC_DataTimeTypedef* RTC_DataTime);
void RTC_SetTime(const RTC_DataTimeTypedef* RTC_DataTime);
void RTC_SetDateTime(const RTC_DataTimeTypedef* RTC_DataTime);
#endif /* RTC_H_ */
