#ifndef HTU21D_H_
#define HTU21D_H_

#define HTU21D_SLA ((uint8_t)0x80)


#define HTU21D_TEMP_MEAS_HM ((uint8_t)0xE3)
#define HTU21D_HUM_MEAS_HM ((uint8_t)0xE5)
#define HTU21D_TEMP_MEAS_NHM ((uint8_t)0xF3)
#define HTU21D_HUM_MEAS_NHM ((uint8_t)0xF5)
#define HTU21D_WRITE_UR ((uint8_t)0xE6)
#define HTU21D_READ_UR ((uint8_t)0xE7)
#define HTU21D_SOFT_RESET ((uint8_t)0xFE)


void HTU21D_StartTemperature_NHM();
void HTU21D_StartHumidity_NHM();
void HTU21D_GetTemperature_HM();
void HTU21D_GetHumidity_HM();
