#include <avr/io.h>
#include <util/delay.h>

void TWI_Start()
{
	TWCR = (1<<TWINT) | (1<<TWSTA)| (1<<TWEN);
	while (!(TWCR & (1<<TWINT)));
}
void TWI_Stop()
{
	TWCR = (1<<TWINT) | (1<<TWEN) | (1<<TWSTO);
}

void 	TWI_Write(uint8_t data)
{

}

uint8_t TWI_Read()
{

}
