#ifndef I2C_H_
#define I2C_H_

#define I2C_START_ERROR 0x08
#define I2C_NACK_ERROR 	0x05


void I2C_Init();
void I2C_SetSpeed(uint16_t speed);
void I2C_Start();
inline void I2C_Stop();
void I2C_ERROR(uint8_t error);
void I2C_SendAddr(uint8_t address);
void I2C_SendByte(uint8_t byte);
#endif /* I2C_H_ */
