#include <avr/io.h>
#include <util/delay.h>
#include <string.h>
#include "USART.h"
#include "ESP8266.h"

#define MYUBRR FOSC/16/BAUD-1

void esp8266_Init(ESP8266_InitTypeDef* esp8266_InitStruct)
{
  //Send
	USART_Init(MYUBRR);
}


void esp8266_Connect(char* ssid, char* password)
{
//Send USART AT+ CWJAP =<ssid>,<pwd>
	char command[10]={'A','T','+','C','W','J','A','P','=',','};				//AT+CWJAP=<ssid>,<password>
	char comma = ',';
	USART_Send_String(command,9);

	USART_Send_String(comma,1);
	USART_Send_String(ssid, strlen(ssid));
	USART_Send_String(password, strlen(password));

}
void esp8266_Restart()
{
//Send USART AT+RST
}
